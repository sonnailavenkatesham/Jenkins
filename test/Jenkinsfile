pipeline{
    agent { node { label 'AGENT' } }
    // timeout{ time: 1, unit: 'minite'}
    parameters{
        // string( name: 'Name', description: "Enter your name")
        choice( name: 'Environment', choices: ['Dev', 'PROD'], description: "Chose environment" )
    }
    stages{
        stage("Build"){
            when {
                expression{
                    params.Environment == 'Dev'
                }
            }
            steps{
                sh '''
                ls -l
                pwd
                echo "Building stage is success"
                '''
            }
        }
        stage("Test"){
            input {
                message "Should we continue?"
                ok "Yes, we should."
                parameters {
                    string(name: 'PERSON', defaultValue: '', description: 'Who should I say hello to?')
                }
                when {
                    expression {
                        params.PERSON =='venkat'
                    }
                }
            }
            steps{
                sh '''
                echo "Testing stage is success"
                '''
            }
        }
        stage("Deploy"){
            when {
                expression{
                    params.Environment == 'PROD'
                }
            }
            steps{
                sh '''
                echo "Deploying stage is success"
                '''
            }
        }
    }
    post{
        always{
            echo 'I will always say Hello again!'
        }
    }
}